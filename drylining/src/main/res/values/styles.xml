<resources>

    <style name="AppTheme" parent="AppTheme.Base" />
    <!-- Application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="android:textColor">#000000</item>

        <item name="colorAccent">@color/accent_color</item>

        <item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:activatedBackgroundIndicator">
            @drawable/listselector_multiple_selection
        </item>
        <item name="colorControlNormal">@color/accent_color</item>
        <item name="colorControlActivated">@color/accent_color</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>

      <!--  <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item> -->
    </style>


    <style name="OverFlow" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_icon</item>
    </style>

    <style name="CustomTabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/CustomTabText</item>
    </style>


    <style name="CustomTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/tab_txt_size</item>
        <item name="android:textColor">#b2b2b2</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_txt_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MediumTextStyle">
        <!-- <item name="android:typeface">serif</item>-->
        <item name="android:textColor">@color/detail_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size</item>
        <!--<item name="android:textStyle">bold</item>-->
    </style>

    <style name="EditTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">@color/color_gray_99</item>

    </style>

    <style name="SmallTextStyle">
        <!--    <item name="android:typeface">serif</item>-->
        <item name="android:textColor">@color/detail_sub_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="SmallDarkTextStyle">
        <!--    <item name="android:typeface">serif</item>-->
        <item name="android:textColor">@color/primary_dark_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="backgroundTint">@color/color_gray_99</item>
    </style>

    <style name="MySpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/primary_color</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="ChatActivityTheme" parent="AppTheme.CHAT">
        <item name="android:windowBackground">@color/background_chat_color</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.CHAT" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/color_accent</item>
        <item name="colorControlHighlight">@color/color_accent</item>
        <item name="colorControlNormal">@color/color_accent</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="android:windowBackground">@color/background_app_color</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>