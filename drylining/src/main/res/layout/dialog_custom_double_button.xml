<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/medium_padding_margin">

    <TextView
        android:id="@+id/dialogTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Appearing as expected...?"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dialogTxt"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialogBtnYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/medium_padding_margin"
            android:paddingLeft="@dimen/medium_padding_margin"
            android:paddingRight="@dimen/medium_padding_margin"
            android:paddingTop="@dimen/medium_padding_margin"
            android:text="Yes"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/dialogBtnNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingBottom="@dimen/medium_padding_margin"
            android:paddingLeft="@dimen/medium_padding_margin"
            android:paddingRight="@dimen/medium_padding_margin"
            android:paddingTop="@dimen/medium_padding_margin"
            android:text="No"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

</RelativeLayout>